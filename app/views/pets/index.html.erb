<h1>All pets</h1>

<%= form_with url: "/pets", method: :get, local: true do |f| %>
  <%= f.label      :search %>
  <%= f.text_field :search %>
  <%= f.submit     "Search" %>
<% end %>

<%= render partial: "shared/pets_info", locals: { instance_var: @pets, show_shelter: true, links: true, adopt_button: false } %>

<%= link_to "Start an Application", "/applications/new" %>
